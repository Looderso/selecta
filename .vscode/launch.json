{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Selecta",
            "type": "debugpy",
            "request": "launch",
            "module": "selecta.app",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Run Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Run CLI Command",
            "type": "debugpy",
            "request": "launch",
            "module": "selecta.cli.main",
            "console": "integratedTerminal",
            "args": [],
            "justMyCode": true
        },
        {
            "name": "Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}",
                "-v"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}
