#:kivy 2.3.1

# Global styling
<Button>:
    background_color: 0.2, 0.2, 0.2, 1
    color: 1, 1, 1, 1
    size_hint_y: None
    height: "40dp"
    font_size: '14sp'
    bold: True

<Label>:
    color: 1, 1, 1, 1
    font_size: '16sp'

# Application-wide background
Root:
    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.1, 1
        Rectangle:
            pos: self.pos
            size: self.size

# Authentication View Specific
<PlatformAuthenticationView>:
    canvas.before:
        Color:
            rgba: 0.15, 0.15, 0.15, 1
        Rectangle:
            pos: self.pos
            size: self.size
